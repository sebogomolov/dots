<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="OpenBox 3">
        <menu id="1" label=" Settings">
					<item label="Pavucontrol"> <action name="Execute">
                <execute>pavucontrol</execute>
            </action> </item>
            <item label="Lxappearance"> <action name="execute">
                <execute>lxappearance</execute>
            </action> </item>
						<item label="openbox conf"> <action name="execute">
                <execute>obconf</execute>
            </action> </item>
            <item label="Tint2 Settings"> <action name="Execute">
                <execute>tint2conf</execute>
            </action> </item>
						<item label="Flatseal"> <action name="Execute">
                <execute>flatpak run com.github.tchx84.Flatseal</execute>
            </action> </item>

          <item label="Reconfigure"> <action name="Reconfigure"/> </item>
				</menu>
        <separator/>
        <menu id="2" label=" Power">
          <item label=" Exit"> <action name="Exit"/> </item>
					<item label=" Reboot"> <action name="Execute">
							<prompt>Вы действительно хотите перезагрузить систему?</prompt>
              <execute>reboot -i</execute>
					</action> </item>
					<item label=" Poweroff"> <action name="Execute">
							<prompt>Вы действительно хотите отключить питание?</prompt>
							<execute>poweroff -i</execute>
          </action> </item>
        </menu>
    </menu>
</openbox_menu>
